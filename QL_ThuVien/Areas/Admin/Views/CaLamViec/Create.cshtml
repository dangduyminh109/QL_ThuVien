@model QL_ThuVien.Models.CALAMVIEC

@{
    ViewBag.Title = "Tạo mới ca làm việc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Tạo mới", new List<Tuple<string, string>> {
    Tuple.Create("Ca làm việc", "/Admin/Calamviec"),
    Tuple.Create("Tạo mới", "/Admin/Calamviec/Create")
}))

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <h1 class="text-center text-warning mt-2">Bạn Không Có Quyền Truy Cập Trang Này</h1>
}
else
{
<div class="create account">
    @using (Html.BeginForm("Create", "Calamviec", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <h1 class="title">Thông tin chung</h1>
        <div class="general">
            <div class="form-group">
                <div class="form-item">
                    <label for="buoi">Buổi (<span class="important-item">*</span>)</label>
                    <input class="form-control" id="buoi" name="buoi" type="text" required
                           value="@Html.Raw(Model?.buoi ?? "")" />
                </div>
            </div>
            <div class="form-group">
                <div class="form-item">
                    <label for="thoiGianBD">Thời gian bắt đầu (<span class="important-item">*</span>)</label>
                    <input class="form-control" id="thoiGianBD" name="thoiGianBD" type="time" required
                           value="@(Model?.thoiGianBD.HasValue == true ? Model.thoiGianBD.Value.ToString(@"hh\:mm") : "")" />
                </div>
                <div class="form-item">
                    <label for="thoiGianKT">Thời gian kết thúc (<span class="important-item">*</span>)</label>
                    <input class="form-control" id="thoiGianKT" name="thoiGianKT" type="time" required
                           value="@(Model?.thoiGianKT.HasValue == true ? Model.thoiGianKT.Value.ToString(@"hh\:mm") : "")" />
                </div>
            </div>
        </div>

        <div class="form-group__btn">
            <a href="/Admin/Calamviec" class="btn btn-primary">Quay lại</a>
            <button type="submit" class="btn btn-primary">Tạo ca làm việc</button>
        </div>
    }
</div>
}
