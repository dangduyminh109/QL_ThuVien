@using QL_ThuVien.Models
@model IEnumerable<QL_ThuVien.Models.CALAMVIEC>

@{
    ViewBag.Title = "Danh sách ca làm việc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link href="~/Content/admin/css/page/product.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Danh sách ca làm việc", new List<Tuple<string, string>> {
    Tuple.Create("Danh sách ca làm việc", "/Admin/CaLamViec")
}))

@if (!string.IsNullOrEmpty(ViewBag.ErrorPermission as string))
{
    <div class="alert alert-danger">@Html.Raw(ViewBag.ErrorPermission)</div>
}

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <div class="alert alert-warning">
        <h4>Bạn không có quyền truy cập trang này</h4>
    </div>
}
else
{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="toolbar">
        <div class="toolbar__right-box">
            <a href="@Url.Action("Create", "CaLamViec", new { area = "Admin" })" class="btn btn-primary">
                <span class="icon-btn"><i class="fa-solid fa-plus"></i></span> Thêm mới ca làm việc
            </a>
        </div>
    </div>

    <div class="overview-block">
        <div class="overview-item total-products">
            <h3 class="overview-item__title total-products__title">Tổng số ca làm việc</h3>
            <p class="overview-item__detail">@((Model != null) ? Model.Count() : 0)</p>
        </div>
    </div>

    <div class="list-account list-table">
        <table class="list-account__table">
            <thead>
                <tr>
                    <th>Ca</th>
                    <th>Thời gian bắt đầu</th>
                    <th>Thời gian kết thúc</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var ca in Model)
                    {
                        <tr>
                            <td>@ca.buoi</td>
                            <td>@(ca.thoiGianBD.HasValue ? ca.thoiGianBD.Value.ToString(@"hh\:mm") : "")</td>
                            <td>@(ca.thoiGianKT.HasValue ? ca.thoiGianKT.Value.ToString(@"hh\:mm") : "")</td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "CaLamViec", new { maCA = ca.maCA, area = "Admin" })" class="btn btn-warning">Chi tiết</a>
                                <a href="@Url.Action("Edit", "CaLamViec", new { maCA = ca.maCA, area = "Admin" })" class="btn btn-primary">Sửa</a>
                                <button type="button" class="btn-delete btn btn-danger" data-bs-toggle="modal" data-bs-target="#warningDeleteModal" data-bs-id="@ca.maCA" path="CaLamViec/Delete">Xóa</button>
                            </td>
                        </tr>
                    }
                    <form method="post" id="form-product-delete">
                        @Html.AntiForgeryToken()
                    </form>
                    @Html.Partial("_FormXacNhan", new List<string> {
                        "warningDeleteModal",
                        "Bạn có chắc chắn muốn <b class='warning-text'>Xóa ca làm việc</b> này không?",
                        "Xóa ca làm việc",
                        "warning-delete-modal-btn",
                        "Xóa"
                    })
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            <p class="noProducts">Không có ca làm việc hiển thị.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
