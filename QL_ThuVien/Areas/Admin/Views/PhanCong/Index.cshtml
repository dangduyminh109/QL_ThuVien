@using System.Linq
@using QL_ThuVien.Models
@model IEnumerable<PHANCONG>

@{
    ViewBag.Title = "Danh sách phân công";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link href="~/Content/admin/css/page/product.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Danh sách phân công", new List<Tuple<string, string>> {
    Tuple.Create("Danh sách phân công", "/Admin/PhanCong")
}))

@if (!string.IsNullOrEmpty(ViewBag.ErrorPermission as string))
{
    <div class="alert alert-danger">@Html.Raw(ViewBag.ErrorPermission)</div>
}

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <div class="alert alert-warning"><h4>Bạn không có quyền truy cập trang này</h4></div>
}
else
{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="toolbar">
        <div class="toolbar__box">
            <div class="toolbar__right-box">
                <a href="@Url.Action("Create", "PhanCong", new { area = "Admin" })" class="btn btn-primary">
                    <span class="icon-btn"><i class="fa-solid fa-plus"></i></span> Thêm phân công mới
                </a>
            </div>
        </div>
    </div>

    <div class="overview-block">
        <div class="overview-item total-products">
            <h3 class="overview-item__title total-products__title">Tổng số phân công</h3>
            <p class="overview-item__detail">@((Model != null) ? Model.Count() : 0)</p>
        </div>
    </div>

    <div class="list-account list-table">
        <table class="list-account__table">
            <thead>
                <tr>
                    <th>Nhân viên</th>
                    <th>Ca làm việc</th>
                    <th>Ngày phân công</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.NHANVIEN?.hoTenNV ?? "N/A")</td>
                            <td>@(item.CALAMVIEC.buoi ??"")</td>
                            <td>@item.ngayPhanCong.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", "PhanCong", new { maCA = item.maCA, maNV = item.maNV, ngayPhanCong = item.ngayPhanCong, area = "Admin" })" class="btn btn-warning">Chi tiết</a>
                                <a href="@Url.Action("Edit", "PhanCong", new { maCA = item.maCA, maNV = item.maNV, ngayPhanCong = item.ngayPhanCong, area = "Admin" })" class="btn btn-primary">Sửa</a>
                                <button type="button" class="btn-delete btn btn-danger" data-bs-toggle="modal" data-bs-target="#warningDeleteModal" data-bs-id="@($"{item.maCA}_{item.maNV}_{item.ngayPhanCong:yyyy-MM-dd}")" path="PhanCong/Delete">Xóa</button>
                            </td>
                        </tr>
                    }

                    <form method="post" id="form-product-delete">
                        @Html.AntiForgeryToken()
                    </form>

                    @Html.Partial("_FormXacNhan", new List<string> {
                        "warningDeleteModal",
                        "Bạn có chắc chắn muốn <b class='warning-text'>Xóa phân công</b> này không?",
                        "Xóa phân công",
                        "warning-delete-modal-btn",
                        "Xóa"
                    })
                }
                else
                {
                    <tr><td colspan="4" class="text-center"><p class="noProducts">Không có phân công hiển thị.</p></td></tr>
                }
            </tbody>
        </table>
    </div>
}
