@using QL_ThuVien.Models
@model QL_ThuVien.Models.PHANCONG

@{
    ViewBag.Title = "Chi tiết phân công";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Chi Tiết", new List<Tuple<string, string>> {
    Tuple.Create("Phân công", "/Admin/PhanCong"),
    Tuple.Create("Chi tiết", $"/Admin/PhanCong/Details?maNV={Model.maNV}&maCA={Model.maCA}")
}))

@if (Model != null)
{
    <div class="detail account">
        <h1 class="title">Thông tin phân công</h1>
        <div class="general">
            <div class="form-group">
                <div class="form-item">
                    <p class="label"><b>Tên nhân viên</b></p>
                    <p class="content">@Model.NHANVIEN.hoTenNV</p>
                </div>
            </div>
            <div class="form-group">
                <div class="form-item">
                    <p class="label"><b>Ca làm</b></p>
                    <p class="content">@Model.CALAMVIEC.buoi</p>
                </div>
                <div class="form-item">
                    <p class="label"><b>Thời gian bắt đầu</b></p>
                    <p class="content">@Model.CALAMVIEC.thoiGianBD</p>
                </div>
                <div class="form-item">
                    <p class="label"><b>Thời gian bắt đầu</b></p>
                    <p class="content">@Model.CALAMVIEC.thoiGianKT</p>
                </div>
            </div>
            <div class="form-group">
                <div class="form-item">
                    <p class="label"><b>Ngày Làm</b></p>
                    <p class="content">@Model.ngayPhanCong.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="form-group__btn">
                <a href="@Url.Action("Index", "PhanCong", new { area = "Admin" })" class="btn btn-primary">Quay lại</a>
                <a href="@Url.Action("Edit", "PhanCong", new { maNV = Model.maNV, maCA = Model.maCA, area = "Admin" })" class="btn btn-primary">Sửa phân công</a>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="text-center text-warning mt-2">Dữ liệu phân công không tồn tại hoặc bạn không có quyền truy cập</h1>
}
