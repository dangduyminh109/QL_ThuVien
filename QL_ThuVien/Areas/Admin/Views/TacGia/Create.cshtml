@model QL_ThuVien.Models.TACGIA
@{
    ViewBag.Title = "Tạo mới tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Tạo mới", new List<Tuple<string, string>> {
    Tuple.Create("Tác giả", "/Admin/TacGia"),
    Tuple.Create("Tạo mới", "/Admin/TacGia/Create")
}))

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <h1 class="text-center text-warning mt-2">Bạn Không Có Quyền Truy Cập Trang Này</h1>
}
else
{
    <div class="create account">
        @using (Html.BeginForm("Create", "TacGia", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div class="alert alert-danger">@Html.Raw(ViewBag.Error)</div>
            }

            <h1 class="title">Thông tin chung</h1>
            <div class="general">
                <div class="form-group">
                    <div class="fullName form-item">
                        <label for="hoTenTG">Họ và tên (<span class="important-item">*</span>)</label>
                        <input class="form-control" id="hoTenTG" name="hoTenTG" type="text" required
                               value="@Html.Raw(Model?.hoTenTG ?? "")" />
                    </div>
                    <div class="form-item">
                        <label for="ngaySinh">Ngày sinh</label>
                        <input class="form-control" id="ngaySinh" name="ngaySinh" type="date"
                               value="@(Model?.ngaySinh?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>
                    <div class="form-item">
                        <label for="gioiTinh">Giới tính</label>
                        <select id="gioiTinh" name="gioiTinh" class="form-control">
                            <option value="">-- Chọn --</option>
                            <option value="false" @(Model?.gioiTinh == false ? "selected" : "")>Nam</option>
                            <option value="true" @(Model?.gioiTinh == true ? "selected" : "")>Nữ</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group__btn">
                <a href="/Admin/TacGia" class="btn btn-primary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Tạo tác giả</button>
            </div>
        }
    </div>
}
