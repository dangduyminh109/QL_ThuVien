@using QL_ThuVien.Models
@model QL_ThuVien.Models.TACGIA

@{
    ViewBag.Title = "Chi tiết tác giả";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Chi Tiết", new List<Tuple<string, string>> {
    Tuple.Create("Tác giả", "/Admin/TacGia"),
    Tuple.Create("Chi tiết", $"/Admin/TacGia/Details/{Model.maTG}")
}))

@if (Model != null)
{
    <div class="detail account">
        <h1 class="title">Thông tin chung</h1>
        <div class="general">
            <div class="form-group">
                <div class="fullName form-item">
                    <p class="label"><b>Họ và tên</b></p>
                    <p class="content">@Model.hoTenTG</p>
                </div>
                <div class="birtDate form-item">
                    <p class="label"><b>Ngày sinh</b></p>
                    <p class="content">@(Model.ngaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
                </div>
                <div class="GT form-item">
                    <p class="label"><b>Giới tính</b></p>
                    <p class="content">
                        @(Model.gioiTinh.HasValue ? (Model.gioiTinh.Value ? "Nữ" : "Nam") : "Khác")
                    </p>
                </div>
            </div>

            <div class="form-group__btn">
                <a href="@Url.Action("Index", "TacGia", new { area = "Admin" })" class="btn btn-primary">Quay lại</a>
                <a href="@Url.Action("Edit", "TacGia", new { maTG = Model.maTG, area = "Admin" })" class="btn btn-primary">Sửa tác giả</a>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="text-center text-warning mt-2">Dữ liệu tác giả không tồn tại hoặc bạn không có quyền truy cập</h1>
}
