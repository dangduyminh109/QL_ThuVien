@model QL_ThuVien.Models.THELOAI
@{
    ViewBag.Title = "Tạo mới thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Tạo mới", new List<Tuple<string, string>> {
    Tuple.Create("Thể loại", "/Admin/TheLoai"),
    Tuple.Create("Tạo mới", "/Admin/TheLoai/Create")
}))

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <h1 class="text-center text-warning mt-2">Bạn Không Có Quyền Truy Cập Trang Này</h1>
}
else
{
    <div class="create account">
        @using (Html.BeginForm("Create", "TheLoai", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="tenTL">Tên thể loại *</label>
                <input class="form-control" id="tenTL" name="tenTL" type="text" required value="@Html.Raw(Model?.tenTL ?? "")" />
                @Html.ValidationMessageFor(m => m.tenTL, "", new { @class = "text-danger" })
            </div>
            <div class="form-group__btn">
                <a href="/Admin/TheLoai" class="btn btn-primary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Tạo thể loại</button>
            </div>
        }
    </div>
}
