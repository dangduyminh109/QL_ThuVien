@model QL_ThuVien.Models.THELOAI
@{
    ViewBag.Title = "Chi tiết thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Chi Tiết", new List<Tuple<string, string>> {
    Tuple.Create("Thể loại", "/Admin/TheLoai"),
    Tuple.Create("Chi tiết", $"/Admin/TheLoai/Details/{Model.maTL}")
}))

@if (Model != null)
{
    <div class="detail account">
        <h1 class="title">Thông tin chung</h1>
        <div class="general">
            <div class="form-group">
                <div class="fullName form-item">
                    <p class="label"><b>Tên thể loại</b></p>
                    <p class="content">@Model.tenTL</p>
                </div>
            </div>
            <div class="form-group__btn">
                <a href="@Url.Action("Index", "TheLoai", new { area = "Admin" })" class="btn btn-primary">Quay lại</a>
                <a href="@Url.Action("Edit", "TheLoai", new { maTL = Model.maTL, area = "Admin" })" class="btn btn-primary">Sửa thể loại</a>
            </div>
        </div>
    </div>
}
else
{
    <h1 class="text-center text-warning mt-2">Dữ liệu thể loại không tồn tại hoặc bạn không có quyền truy cập</h1>
}
