@model QL_ThuVien.Models.THELOAI
@{
    ViewBag.Title = "Cập nhật thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Cập nhật thể loại", new List<Tuple<string, string>> {
    Tuple.Create("Thể loại","/Admin/TheLoai"),
    Tuple.Create("Cập nhật", "/Admin/TheLoai/Edit")
}))

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <h1 class="text-center text-warning mt-2">Bạn Không Có Quyền Truy Cập Trang Này</h1>
}
else
{
    <div class="create account">
        @using (Html.BeginForm("Edit", "TheLoai", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.maTL)

            if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            }

            <div class="form-group">
                <label for="tenTL">Tên thể loại *</label>
                <input class="form-control" id="tenTL" name="tenTL" type="text" required value="@Html.Raw(Request.Form["tenTL"] ?? Model?.tenTL ?? "")" />
                @Html.ValidationMessageFor(m => m.tenTL, "", new { @class = "text-danger" })
            </div>
            <div class="form-group__btn mt-3">
                <a href="/Admin/TheLoai" class="btn btn-secondary">Quay lại</a>
                <button type="submit" class="btn btn-primary">Cập nhật thể loại</button>
            </div>
        }
    </div>
}
