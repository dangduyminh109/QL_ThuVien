@using QL_ThuVien.Models
@model IEnumerable<QL_ThuVien.Models.NXB>

@{
    ViewBag.Title = "Danh sách Nhà Xuất Bản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link href="~/Content/admin/css/page/product.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Danh sách Nhà Xuất Bản", new List<Tuple<string, string>> {
    Tuple.Create("Danh sách NXB", "/Admin/NXB")
}))

@if (!string.IsNullOrEmpty(ViewBag.RoleLoadError as string))
{
    <div class="alert alert-warning">@Html.Raw(ViewBag.RoleLoadError)</div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorPermission as string))
{
    <div class="alert alert-danger">@Html.Raw(ViewBag.ErrorPermission)</div>
}

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <div class="alert alert-warning">
        <h4>Bạn không có quyền truy cập trang này</h4>
    </div>
}
else
{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="toolbar">
        <div class="toolbar__right-box">
            <a href="@Url.Action("Create", "NXB", new { area = "Admin" })" class="btn btn-primary">
                <span class="icon-btn"><i class="fa-solid fa-plus"></i></span> Thêm mới NXB
            </a>
        </div>
    </div>

    <div class="overview-block">
        <div class="overview-item total-products">
            <h3 class="overview-item__title total-products__title">Tổng số NXB</h3>
            <p class="overview-item__detail total-products__detail">@((Model != null) ? Model.Count() : 0)</p>
        </div>
    </div>

    <div class="list-account list-table">
        <table class="list-account__table">
            <thead>
                <tr>
                    <th>Tên NXB</th>
                    <th>Địa chỉ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var nxb in Model)
                    {
                        <tr>
                            <td>@nxb.tenNXB</td>
                            <td>@nxb.diaChi</td>
                            <td>
                                <a href="@Url.Action("Edit", "NXB", new { maNXB = nxb.maNXB, area = "Admin" })" class="btn btn-primary">Sửa</a>
                                <a href="@Url.Action("Details", "NXB", new { maNXB = nxb.maNXB, area = "Admin" })" class="btn btn-warning">Chi tiết</a>
                                <button type="button" class="btn btn-danger btn-delete" data-bs-toggle="modal" data-bs-target="#warningDeleteModal" data-bs-id="@nxb.maNXB" path="NXB/Delete">Xóa</button>
                            </td>
                        </tr>
                    }
                    <form method="post" id="form-product-delete">
                        @Html.AntiForgeryToken()
                    </form>
                    @Html.Partial("_FormXacNhan", new List<string> {
                        "warningDeleteModal",
                        "Bạn có chắc chắn muốn <b class='warning-text'>Xóa NXB</b> này không?",
                        "Xóa NXB",
                        "warning-delete-modal-btn",
                        "Xóa"
                    })
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">
                            <p class="noProducts">Không có NXB hiển thị.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
