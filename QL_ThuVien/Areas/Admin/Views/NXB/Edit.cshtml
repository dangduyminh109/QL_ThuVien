@model QL_ThuVien.Models.NXB

@{
    ViewBag.Title = "Cập nhật Nhà Xuất Bản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles{
    <link href="~/Content/admin/css/page/create-edit-detail.css" rel="stylesheet" />
}

@Html.Partial("_PageHeader", Tuple.Create("Cập nhật", new List<Tuple<string, string>> {
    Tuple.Create("NXB","/Admin/NXB"),
    Tuple.Create("Cập nhật", $"/Admin/NXB/Edit/{Model.maNXB}")
}))

@if (ViewBag.NoAccess != null && (bool)ViewBag.NoAccess)
{
    <h1 class="text-center text-warning mt-2">Bạn Không Có Quyền Truy Cập Trang Này</h1>
}
else
{
<div class="create account">
    @using (Html.BeginForm("Edit", "NXB", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.maNXB)

        if (!ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <h1 class="title">Thông tin NXB</h1>
        <div class="general">
            <div class="form-group">
                <div class="form-item">
                    <label for="tenNXB">Tên NXB *</label>
                    <input type="text" class="form-control" name="tenNXB" id="tenNXB"
                           value="@(Request.Form["tenNXB"] ?? Model?.tenNXB ?? "")" required />
                </div>
                <div class="form-item">
                    <label for="diaChi">Địa chỉ</label>
                    <input type="text" class="form-control" name="diaChi" id="diaChi"
                           value="@(Request.Form["diaChi"] ?? Model?.diaChi ?? "")" required />
                </div>
            </div>
        </div>

        <div class="form-group__btn mt-3">
            <a href="/Admin/NXB" class="btn btn-secondary">Quay lại</a>
            <button type="submit" class="btn btn-primary">Cập nhật NXB</button>
        </div>
    }
</div>
}
