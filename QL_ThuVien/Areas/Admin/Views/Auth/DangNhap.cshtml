@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập hệ thống</title>

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* ---- Background Full Page ---- */
        body {
            margin: 0;
            padding: 0;
            background: url('/Content/images/bg_login.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
            position: relative;
        }

            /* ---- Overlay tối để nổi form ---- */
            body::before {
                content: "";
                position: fixed;
                inset: 0;
                background: rgba(0,0,0,0.45);
                z-index: 0;
            }

        /* ---- Container Login ---- */
        .login-container {
            position: relative;
            z-index: 1;
            width: 350px;
            margin: 100px auto;
            background: rgba(255, 255, 255, 0.90);
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .login-title {
            text-align: center;
            font-size: 20px;
            margin-bottom: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-title">Đăng nhập bằng tài khoản DB</div>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form method="post" action="/Admin/Auth/DangNhapPost">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="dbUsername" class="form-label">Tên đăng nhập (DB Username)</label>
                <input type="text" class="form-control" id="dbUsername" name="dbUsername" placeholder="Nhập DB Username" required />
            </div>

            <div class="mb-3">
                <label for="dbPassword" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="dbPassword" name="dbPassword" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
        </form>
    </div>

</body>
</html>
