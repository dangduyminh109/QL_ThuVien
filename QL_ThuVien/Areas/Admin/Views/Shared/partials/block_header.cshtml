@using QL_ThuVien.Models

@{
    var hoTen = Session["HoTen"] as string ?? "Người dùng";
}
<header class="header">
    <div class="wrapper">
        <div class="left-box">
            <div class="logo">
                <a class="logo__link" href="/">
                    <img class="logo__img" src="~/Content/images/Logo/libary_logo.png" alt="logo" />
                </a>
            </div>

            <div class="toggle">
                <div class="form-check form-switch">
                    <input id="toggle__nav" class="form-check-input" type="checkbox" role="switch" checked />
                </div>
            </div>

            <div class="search">
                <div class="search-box" id="search-box">
                    <span class="search-box__close-icon" id="search-box__close-icon">
                        <i class="fa-solid fa-xmark"></i>
                    </span>
                    <input class="search-box__input" type="text" placeholder="Enter keyword..." />
                </div>
                <i class="search__icon fa-solid fa-magnifying-glass" id="search__icon"></i>
            </div>

            <div class="screen">
                <i class="screen__icon screen__icon--expand fa-solid fa-expand"></i>
                <i class="screen__icon screen__icon--compress active fa-solid fa-compress"></i>
            </div>

            <div class="right-box__btn-dropdown" id="right-box__btn-dropdown">
                <i class="right-box__btn-dropdown-icon fa-solid fa-ellipsis" id="right-box__btn-dropdown-icon"></i>
            </div>
        </div>

        <div class="right-box" id="right-box">
            <div class="search">
                <div class="search-box" id="search-box">
                    <span class="search-box__close-icon" id="search-box__close-icon">
                        <i class="fa-solid fa-xmark"></i>
                    </span>
                    <input class="search-box__input" type="text" placeholder="Enter keyword..." />
                </div>
                <i class="search__icon fa-solid fa-magnifying-glass" id="search__icon"></i>
            </div>

            <div class="screen">
                <i class="screen__icon screen__icon--expand fa-solid fa-expand"></i>
                <i class="screen__icon screen__icon--compress active fa-solid fa-compress"></i>
            </div>
            <button type="button" class="btn-admin btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <img class="admin__img" src=@(false ? "/Content/images/ANHDAIDIEN/": "/Content/images/default-image.jpg") alt="avatar" />
                <h2 class="admin__name">@hoTen</h2>
                <span class="admin__icon">
                    <i class="fa-solid fa-caret-down"></i>
                </span>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="/admin/Auth/HoSo/">
                        <span class="dropdown-item__icon"><i class="fa-regular fa-user"></i></span>
                        <h3 class="dropdown-item__title">Hồ sơ</h3>
                    </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <a class="dropdown-item" href="/admin/Auth/DangXuat" id="logout">
                        <span class="dropdown-item__icon"><i class="fa-solid fa-arrow-right-from-bracket"></i></span>
                        <h3 class="dropdown-item__title">Đăng xuất</h3>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>
