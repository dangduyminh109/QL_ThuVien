@model IEnumerable<QL_ThuVien.Controllers.BookCardViewModel>

@{
    ViewBag.Title = "Danh sách sách";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        font-weight: 700;
        color: #343a40;
        margin-bottom: 1.5rem;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1.2px;
    }

    .book-cover-container {
        height: 300px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        background: #e9ecef;
        padding: 10px;
    }

    .card {
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 6px 15px rgb(0 0 0 / 0.1);
        cursor: pointer;
        background: #fff;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgb(0 0 0 / 0.15);
    }

    .card-img-top {
        object-fit: contain;
        width: auto; 
        max-width: 100%;
        height: 100%;
        border-radius: 0; 
        transition: transform 0.3s ease;
    }
    .card:hover .card-img-top {
        transform: scale(1.03);
    }

    .card-body {
        padding: 1rem 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .card-title a {
        color: #007bff;
        font-size: 1.25rem;
        font-weight: 700;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .card-title a:hover {
        color: #0056b3;
        text-decoration: underline;
    }

    .card-text {
        color: #495057;
        font-size: 0.95rem;
        margin-bottom: 0.35rem;
    }

    .btn-primary {
        border-radius: 25px;
        padding: 0.375rem 1.2rem;
        font-weight: 600;
        box-shadow: 0 4px 8px rgb(0 123 255 / 0.3);
        transition: background-color 0.3s ease;
        align-self: start;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0 6px 15px rgb(0 86 179 / 0.5);
    }

    media (min-width: 768px) {
        .row-cols-md-3 > * {
            margin-bottom: 2rem;
        }
    }
</style>

<div class="container my-5">
    <h2>Danh sách sách</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (!Model.Any())
    {
        <p class="text-center text-muted fs-5">Không có sách nào.</p>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm" title="@item.TenSach">

                        <div class="book-cover-container">
                            <img class="card-img-top"
                                 src="@(string.IsNullOrEmpty(item.AnhBia) ? Url.Content("~/Content/images/default-image.jpg") : Url.Content(item.AnhBia))"
                                 alt="Ảnh bìa @item.TenSach" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="@Url.Action("Detail", "Home", new { id = item.maSach })">
                                    @item.TenSach
                                </a>
                            </h5>
                            <p class="card-text"><strong>Tác giả:</strong> @item.TenTacGia</p>
                            <p class="card-text"><strong>NXB:</strong> @item.TenNXB</p>
                            <p class="card-text"><strong>Thể loại:</strong> @item.TenTheLoai</p>
                            <p class="card-text text-success fw-semibold"><strong>Số lượng còn lại:</strong> @item.SlConLai</p>

                            <a href="@Url.Action("Detail", "Home", new { id = item.maSach })" class="btn btn-primary mt-auto">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
